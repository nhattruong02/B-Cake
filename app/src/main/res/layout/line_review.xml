<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_line_review"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/splashscreen" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_line_review_name_user"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_line_review"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_line_review_time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_line_review_name_user"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:progressTint="#FFD700"
        android:progressBackgroundTint="#BBBBBB"
        android:id="@+id/rb_line_review"
        style="?attr/ratingBarStyleSmall"
        android:layout_below="@id/txt_line_review_name_user"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_line_review"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_line_review_comment"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rb_line_review"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_line_review"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>