<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_line_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/splashscreen" />
        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:text="Bánh trà xanh"
            android:id="@+id/txt_line_cart_name"
            android:layout_toRightOf="@id/img_line_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/layout_quantity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:text="200.000 đ"
            android:id="@+id/txt_line_cart_price"
            android:layout_toRightOf="@id/img_line_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_quantity"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_line_cart_name"
            android:layout_toRightOf="@id/img_line_cart"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_line_cart_plus"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="@color/text"
                android:text="+"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_line_cart_quantity"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_line_cart_minus"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="@color/text"
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_line_cart_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>